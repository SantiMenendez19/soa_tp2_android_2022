<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutProgress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="50dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/black_transparent"
    app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtProgressHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtProgressDevice"
            android:text="@string/ph_connect_device"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/txtProgressDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/progress"
            android:text="@string/ph_device_name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:textSize="20sp"
            />
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress"
            android:padding="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtProgressDevice"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>